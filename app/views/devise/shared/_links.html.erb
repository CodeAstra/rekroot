
    <%- if controller_name != 'sessions' %>
      <!-- Changed the styling for the login button -->
      <div class="actions input-group sign_up_fields shared_login" >    
        <%= link_to "Click here to Log In", new_session_path(resource_name), id: "log_in_link" %>
      </div>  
    <% end -%>

    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>  
    <!-- Changed the styling for the signup button -->
      <div class="actions input-group sign_up_fields shared_login">    
        <%= link_to "Click here to Sign Up", new_registration_path(resource_name), id: "log_in_link" %>
      </div>
    <% end -%>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <div class="actions input-group sign_up_fields shared_login">  
      <%= link_to "Forgot your password?", new_password_path(resource_name), id: "log_in_link" %><br />
      </div>
    <% end -%>

    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <div class="actions input-group sign_up_fields shared_login">  
      <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "shared_links_text", id: "log_in_link" %><br />
      </div>
    <% end -%>

    <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
      <div class="actions input-group sign_up_fields shared_login">  
      <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), id: "log_in_link" %><br />
      </div>
    <% end -%>

    <%- if devise_mapping.omniauthable? %>
      <div class="actions input-group sign_up_fields shared_login">  
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), id: "log_in_link" %><br />
      <% end -%>
      </div>
    <% end -%>


