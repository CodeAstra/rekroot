<div class="container" id ="user_settings">
  <div class="row">
    <div class="col-md-6">
      <h2 class="user_settings_header"> General Account settings </h2>
        <ul>
           <li class="user_name">
           <span class="settings_tag">Name:</span><%=current_user.name.capitalize  %>
           </li>
           <li class="user_email">
           <span class="settings_tag">Email:</span><%=current_user.email  %>
           </li>
           <li>
           <p class="edit_profile" data-toggle="modal" data-target="#edit_profile_myModal" > Edit profile</p>
           </li>            
        </ul>  
    </div>
  </div>
</div>



<!-- Modal for editing profile -->

<div class="modal fade" id="edit_profile_myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" id="invite_colleagues_modal_dialog">
    <div class="modal-content" id="invite_colleagues_modal_content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Edit profile</h4>
      </div>
      <div class="modal-body">
        <div>
        <%= render "devise/registrations/edit" %>
        </div>
      </div>
    </div>
  </div>
</div>