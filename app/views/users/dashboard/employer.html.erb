<h1>Hello Employer</h1>

<% @jobs.each do |c| %>
<div class="job-card col-md-3">
  <%= link_to new_job_path, :method => :get do %>
  <span class="glyphicon glyphicon-plus">My span</span>
  <% end %>

  <%= link_to user_path(c) do %>
  <div id="job_card">
    <p class="job_title"><%= c.title %></p><br>
    <div class="updates_section">
      <i class="fa fa-whatsapp updates"></i>
      <p class="updates"><%= c.books_count.to_i==0 ? ("0 messages") : (c.books_count.to_i==1 ? ("1 message"):(c.books_count.to_s + " messages")) %></p>
    </div>
    <div class="updates_section">
      <i class="fa fa-inbox updates"></i>
      <p class="updates"><%= c.books_count.to_i==0 ? ("0 updates") : (c.books_count.to_i==1 ? ("1 update"):(c.books_count.to_s + " updates")) %></p>
    </div>
  </div>
  <% end %>

</div>
<% end %>

<li>
  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>        
</li>

