<div> 
  <h2><%= @job.title %></h2>
  <h4><%= @job.description %></h4>

  <%= simple_form_for [@company, @job, @applicant] do |f|%>
    <!-- <div class="field input-group"> -->
      <%= f.input :name, autofocus: true, placeholder: "Applicant's Name" %>
    <!-- </div> -->
    <%= f.input :job_id, as: :hidden %>

    <!-- <div class="field input-group"> -->
      <%= f.input :email, placeholder: "Applicant's Email Id" %>
    <!-- </div> -->

    <!-- <div class="actions input-group"> -->
      <%= f.button :submit, "Create Applicant", class: "btn btn-primary", id: "create_job_btn" %>
    <!-- </div> -->

  <% end %>

</div>

