<li class="ui-state-default" id="applicant_<%= applicant.id %>" data-toggle="modal" data-target="#applicant_details_<%= applicant.id %>" >
  <div class="applicant_card">
    <div class="applicant_card_name">
      <p class="applicant_name"><%= applicant.name %></p>
    </div>
  </div>                
</li>


<div class="modal fade" id="applicant_details_<%= applicant.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" id="modal-dialog">
    <div class="modal-content" id="applicant_modal">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel applicant_modal_name"><%= applicant.name %></h4>        
        <div class="delete_applicant">
        <%= link_to "Delete", company_job_applicant_path(@company, @job, applicant), method: :delete, class: "btn btn-danger pull-right", id: "delete_applicant_button" %>
        </div>
      </div>

      <div class="status">        
        <!-- <button class="btn btn-default status_buttons current_status" id="status_applied">Applied</button>
        <button class="btn btn-default status_buttons" id="status_shortlisted">Shortlisted</button>
        <button class="btn btn-default status_buttons" id="status_screening">Screening</button>
        <button class="btn btn-default status_buttons" id="status_prehire">Pre-hire shortlist</button>
        <button class="btn btn-default status_buttons" id="status_offered">Offered</button> -->

        <%= link_to "Applied", company_job_applicant_path(@company, @job, applicant, "applicant[status]" => 1), method: :put, remote: true, class: "btn btn-default status_buttons", id: "status_applied"  %>
        <%= link_to "Shortlisted", company_job_applicant_path(@company, @job, applicant, "applicant[status]" => 2), method: :put, remote: true, class: "btn btn-default status_buttons", id: "status_shortlisted"  %>
        <%= link_to "Screening", company_job_applicant_path(@company, @job, applicant, "applicant[status]" => 3), method: :put, remote: true, class: "btn btn-default status_buttons", id: "status_screening"  %>
        <%= link_to "Pre-hire Shotlist", company_job_applicant_path(@company, @job, applicant, "applicant[status]" => 4), method: :put, remote: true, class: "btn btn-default status_buttons", id: "status_prehire"  %>
        <%= link_to "Offered", company_job_applicant_path(@company, @job, applicant, "applicant[status]" => 5), method: :put, remote: true, class: "btn btn-default status_buttons", id: "status_offered"  %>




      </div>

      <div class="modal-comment">

        <%= render partial: "comments/new", locals: {job: @job, company: @company, applicant: applicant, comment: @new_comment} %>
        
        <div id="all_comments">
          <%= render @comments[applicant.id] if @comments[applicant.id]%>
        </div>

        
      </div>      
    </div>
  </div>
</div>
