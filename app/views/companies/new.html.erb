  <div class="container">
      <div class="row">
        <div class="col-sm-4 col-sm-offset-4">

          <%= simple_form_for(@company) do |f| %>

          <div class="field input-group">
            <%= f.input :name, autofocus: true, placeholder: "Company Name" %>
          </div>

          <div class="field input-group">
            <%= f.input :website, placeholder: "Website", as: :text %>
          </div>

          <div class="actions input-group">
            <%= f.button :submit, "Create Company", class: "btn btn-primary", id: "create_job_btn" %>
          </div>

          <% end %>

        </div>
      </div>
    </div>

    