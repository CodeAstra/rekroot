    <div class="container">
      <div class="row">
        <div class="col-sm-4 col-sm-offset-4">

          <%= simple_form_for(@job) do |f| %>

          <div class="field input-group">
            <%= f.input :title, autofocus: true, class: "form-control input_box", placeholder: "Title" %>
          </div>

          <div class="field input-group">
            <%= f.input :description, class: "form-control input_box", placeholder: "Description", as: :text %>
          </div>

          <div class="actions input-group">
            <%= f.button :submit, "Create Job", class: "btn btn-danger", id: "create_job_btn" %>
          </div>

          <% end %>

        </div>
      </div>
    </div>

    
